        "body-parser": "^1.18.2",
        "cookie-parser": "^1.4.3",
        "express": "^4.16.3",
        "google-auth-library": "^1.3.2",
        "morgan": "^1.9.0",
        "node-fetch": "^1.7.3",
        "web-animations-js": "^2.3.1"
    },
    "devDependencies": {
        "@types/cookie-parser": "^1.4.1",
        "@types/express": "^4.11.1",
        "@types/google-cloud__datastore": "^1.3.0",
        "@types/node": "^8.10.0",
        "@types/node-fetch": "^1.6.7",
        "concurrently": "^3.5.1",
        "intern": "^4.1.5",
        "nodemon": "^1.17.2",
        "reflect-metadata": "^0.1.12",
        "sinon": "^4.4.8",
        "source-map-support": "^0.5.4",
        "typescript": "^2.7.2"
    },
    "scripts": {
        "init": "popd ./src/client/; ln -s .../server/model/ .; popd",
        "sync": "cp -R ./src/client/images ./src/client/fonts ./dist/client/",
        "dev": "nodemon -r source-map-support/register ./server.js --watch ./dist/server",
        "watch": "concurrently --names \"server,client\" -c \"bgBlue,black.bgGreen\" \"tsc -p ./src/server/tsconfig.json --watch\" \"tsc -p ./src/client/tsconfig.json --watch\"",
        "test": "intern",
        "deploy": "gcloud app deploy",
        "start": "node ./server.js"
    }
}